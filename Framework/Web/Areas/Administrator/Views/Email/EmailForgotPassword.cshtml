@using Transverse
@model KeyValuePair<string, string>
@{
    Layout = null;
}

<div>
    Dear @Model.Key,
    <br /><br />
    You have requested to reset your password on @Constants.AppName because you have forgotten your password.
    <br />
    If you did not request this, please ignore it.
    <br />
    To reset your password, please click <a href='@Model.Value'>here</a>.
    <br />
    Or please visit the following page @Model.Value
    <br /><br />
    Thanks you!
    <br /><br />
    @Constants.AppName
</div>