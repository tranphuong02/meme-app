@using Framework.Utility
@using Transverse.Utils
@using Constants = Transverse.Constants
<nav class="navbar-default navbar-static-side animated fadeInLeft" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">

            <!-- Header -->
            <li class="nav-header">
                <div class="dropdown profile-element">

                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <span class="clear">
                            <span class="block m-t-xs">
                                <strong class="font-bold">@Constants.AppName</strong>
                            </span> <span class="text-muted text-xs block">@BackendHelpers.CurrentUserName() <b class="caret"></b></span>
                        </span>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight m-t-xs">
                        @if (BackendHelpers.CurrentUserIsInRole(Constants.RoleName.SuperAdmin) == false)
                        {
                            <li><a href="@Url.Action("ChangePassword", "Account", new{area=Constants.AdminArea})">Change Password</a></li>
                            <li class="divider"></li>
                        }
                        <li><a href="@Url.Action("Logout", "Account", new { area = Constants.AdminArea })">Logout</a></li>
                    </ul>
                </div>

                <div class="logo-element">
                    VN
                </div>
            </li>

            <!-- Menu content -->
            <!-- Single Menu -->
            <li class="menu-item @Html.ActivePage("Statistics", "", "active") @Html.ActivePage("Home", "", "active")">
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> <span class="nav-label">Dashboard</span></a>
            </li>

            <li class="menu-item @Html.ActivePage("User", "", "active")">
                <a href="@Url.Action("Index", "User")"><i class="fa fa-user"></i> <span class="nav-label">User Management</span></a>
            </li>

            <li class="menu-item @Html.ActivePage("Resource", "", "active")">
                <a href="@Url.Action("Index", "Resource")"><i class="fa fa-user"></i> <span class="nav-label">Resource Management</span></a>
            </li>
        </ul>
    </div>
</nav>