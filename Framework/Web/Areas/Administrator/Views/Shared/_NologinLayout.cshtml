@using Framework.Utility
@using Constants = Transverse.Constants
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@Constants.AppName - @ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <link href="~/Content/admin.min.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="gray-bg">
    <div class="text-center">
        <h1 class="logo-name">@Constants.AppName</h1>
    </div>

    <div class="col-sm-offset-2 col-sm-8">
        @Html.ShowStatusMessage()
        @RenderBody()
    </div>

    <div class="clearfix"></div>
    <p class="m-t text-center"> <small>@Constants.AppName</small> </p>

    <!-- Mainly scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", false)
</body>
</html>