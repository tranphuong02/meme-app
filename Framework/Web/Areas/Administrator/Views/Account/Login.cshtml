@model Transverse.Models.Business.Account.LoginViewModel
@using Transverse

@{
    ViewBag.Title = "Login";
    Layout = Constants.NologinLayout;
}


<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <h3>Welcome to @Constants.AppName</h3>
        <form class="m-t" role="form" action="@Url.Action("Login", "Account")" method="POST">
            @Html.AntiForgeryToken()

            <div class="text-danger text-left">
                @Html.ValidationSummary(true)
            </div>

            <div class="form-group text-left">
                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="clearfix"></div>

            <div class="form-group text-left">
                @Html.PasswordFor(model => model.Password, new { @placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="clearfix"></div>

            <div class="form-group text-left">
                @Html.CheckBoxFor(model => model.RememberMe)
                &nbsp;
                @Html.LabelFor(model => model.RememberMe)
            </div>

            <input type="hidden" value="@ViewBag.ReturnURL" id="returnUrl" name="returnUrl" />

            <div class="clearfix"></div>
            <button type="submit" class="btn btn-primary block full-width m-b m-t-md">Login</button>
            <a href="@Url.Action("ForgotPassword", "Account")"><small>Forgot password?</small></a>
        </form>
    </div>
</div>