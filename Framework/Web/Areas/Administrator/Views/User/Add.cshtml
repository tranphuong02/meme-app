@model Transverse.Models.Business.User.UserAddViewModel
@using Transverse
@using Transverse.Utils

@{
    ViewBag.Title = "Add New User";
    Layout = Constants.AdminLayout;
}
@section styles{
    <link href="~/Content/plugins/chosen/chosen.css" rel="stylesheet">
}
<div class="col-md-12">
    <div class="col-xs-12">
        @using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First name" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last name" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleId, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        <select name="RoleId" id="RoleId" class="form-control">
                            <option value="">@Constants.AllText</option>
                            @if (Model.Roles != null && Model.Roles.Any())
                            {
                                foreach (var role in Model.Roles)
                                {
                                    <option @LayoutHelpers.IsSelected(Model.RoleId, role.Id) value="@role.Id">@role.Name</option>
                                }
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.CheckBoxFor(model => model.IsActive)
                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <div class="col-sm-offset-3 text-center">
                    <button type="button" id="btnSave" class="btn btn-primary ladda-button" data-size="s" data-style="zoom-in">
                        <i class="fa fa-save"></i> Save
                    </button>
                    <a class="btn btn-warning" onclick="LoadingEnable()" href="@Url.Action("Index", "User", new{area=Constants.AdminArea})"><i class="fa fa-remove"></i> Cancel</a>
                </div>
            </div>
        }
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/plugins/chosen/chosen.jquery.js"></script>
}